.second_story
  background-image: linear-gradient(to bottom, #000, #ccc)
  color: #e3e3e3

.step h3 {
  font-family: 'Playfair Display', serif;
  font-weight: 400;
  font-style: normal;
  font-size: 1.5em;
  line-height: 1.3;
  text-align: left;
  display: block;
}

.step p {
  font-family: "Lora", serif;
  font-size: 1.2em;
  line-height: 1.55;
  padding-bottom: 10rem;
  padding-top: 1em
  text-align: left;
  display: block;
  padding-left: 5%
}

.step {
  /*margin: 2rem auto;*/
  opacity: 0.2;
  display: block;
  height: 100% !important;
}

.step.is-active {
  opacity: 1;
}

#second-map-scroll {
  /*display: flex;*/
  border-top: 1px;
  border-bottom: 1px;
  /*height: 100%;*/
}

.scroll__text2
  width: 37%
  padding-left: 5%
  padding-top: 5%
  top: -30em
  position: relative

.scroll__figure2 {
  position: -webkit-sticky;
  position: sticky;
  right: 50%;
  top: 4em;
  bottom: auto;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  z-index: 100;
}

.scroll__figure2.is-fixed {
  position: fixed;
}

.scroll__figure2.is-bottom {
  bottom: 0;
  top: auto;
}

.chart {
  position: absolute;
  right: 1.5rem;
  top: 30%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.chart p {
  text-align: center;
  padding: 1rem;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 8rem;
  font-weight: 900;
  color: #666;
}

