input[type=range] {
  -webkit-appearance: none;
  width: 40%;
  margin: 7px 0;
}

input[type=range]:focus {
  outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
  width: 40%;
  height: 5px;
  cursor: pointer;
  -webkit-box-shadow: 0px 0px 0.1px #000, 0px 0px 0px #0d0d0d;
  box-shadow: 0px 0px 0.1px #000, 0px 0px 0px #0d0d0d;
  background: rgba(179,255,102,0.78);
  border-radius: 25px;
  border: 0px solid #010101;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-box-shadow: 0px 0px 1px #000031, 0px 0px 0px #00004b;
  box-shadow: 0px 0px 1px #000031, 0px 0px 0px #00004b;
  border: 2.5px solid #b3ff66;
  height: 19px;
  width: 19px;
  border-radius: 15px;
  background: #fff;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: -7px;
}

input[type=range]:focus::-webkit-slider-runnable-track {
  background: rgba(192,255,128,0.78);
}

input[type=range]::-moz-range-track {
  width: 40%;
  height: 5px;
  cursor: pointer;
  box-shadow: 0px 0px 0.1px #000, 0px 0px 0px #0d0d0d;
  background: rgba(179,255,102,0.78);
  border-radius: 25px;
  border: 0px solid #010101;
}

input[type=range]::-moz-range-thumb {
  box-shadow: 0px 0px 1px #000031, 0px 0px 0px #00004b;
  border: 2.5px solid #b3ff66;
  height: 19px;
  width: 19px;
  border-radius: 15px;
  background: #fff;
  cursor: pointer;
}

input[type=range]::-ms-track {
  width: 40%;
  height: 5px;
  cursor: pointer;
  background: transparent;
  border-color: transparent;
  color: transparent;
}

input[type=range]::-ms-fill-lower {
  background: rgba(166,255,76,0.78);
  border: 0px solid #010101;
  border-radius: 50px;
  box-shadow: 0px 0px 0.1px #000, 0px 0px 0px #0d0d0d;
}

input[type=range]::-ms-fill-upper {
  background: rgba(179,255,102,0.78);
  border: 0px solid #010101;
  border-radius: 50px;
  box-shadow: 0px 0px 0.1px #000, 0px 0px 0px #0d0d0d;
}

input[type=range]::-ms-thumb {
  box-shadow: 0px 0px 1px #000031, 0px 0px 0px #00004b;
  border: 2.5px solid #b3ff66;
  height: 19px;
  width: 19px;
  border-radius: 15px;
  background: #fff;
  cursor: pointer;
  height: 5px;
}

input[type=range]:focus::-ms-fill-lower {
  background: rgba(179,255,102,0.78);
}

input[type=range]:focus::-ms-fill-upper {
  background: rgba(192,255,128,0.78);
}

