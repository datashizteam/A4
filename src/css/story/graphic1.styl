  justify-content: center;
  border-top: 1px;
  border-bottom: 1px;
  /*height: 100%;*/
}

.scroll__text 
  width: 37%
  padding-left: 5%
  padding-top: 5%
  top: -30em
  position: relative

.scroll__figure {
  position: -webkit-sticky;
  position: sticky;
  right: 50%;
  top: 4em;
  bottom: auto;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  z-index: 100;
}

.scroll__figure.is-fixed {
  position: fixed;
}

.scroll__figure.is-bottom {
  bottom: 0;
  top: auto;
}

.chart {
  position: absolute;
  right: 1.5rem;
  top: 30%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.chart p {
  text-align: center;
  padding: 1rem;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
