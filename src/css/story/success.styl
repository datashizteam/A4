.scroll__text3
  width: 60%
  left: 40%
  /*padding-left: 10%*/
  /*padding-right: 10%*/
  /*padding-top: 10%*/
  top: -20.8em
  position: relative
  text-align: center;
  z-index: 999

.scroll__figure3 {
  font-family: 'Playfair Display', serif;
  font-weight: 400;
  position: -webkit-sticky;
  position: sticky;
  width: 40%
  padding-left: 15%;
  padding-top: 15%
  /*right: 50%;*/
  top: 4em;
  bottom: auto;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  z-index: 100;
}

.scroll__text3 #step1
  background-image: url('assets/teacher.jpg')
  background-position: 0% 0%
  background-attachment: fixed
  background-size: cover

.scroll__text3 #step2
  background-image: url('assets/support.jpg')
  background-position: 20% 0%
  background-attachment: fixed
  background-size: cover

.scroll__text3 #step3
  background-image: url('assets/neighborhood.jpg')
  background-position: 0% 0%
  background-attachment: fixed
  background-size: cover

.scroll__figure3.is-fixed {
  position: fixed;
}

.scroll__figure3.is-bottom {
  bottom: 0;
  top: auto;
}

.chart {
  position: absolute;
  right: 1.5rem;
  top: 30%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.chart p {
  text-align: center;
  padding: 1rem;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 8rem;
  font-weight: 900;
  color: #666;
}
