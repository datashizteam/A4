.third_story
  background-color: #000
  color: #f4f4f4

.step3 h3 {
  font-family: 'Playfair Display', serif;
  font-weight: 400;
  font-style: normal;
  font-size: 2.5em;
  padding-bottom: 1rem;
  text-align: center
  line-height: 1.3;
  text-align: left;
  display: block;
  z-index: 999;
}

.step3 p {
  font-family: "Lora", serif;
  font-size: 1.2em;
  line-height: 1.55;
  padding-bottom: 10rem;
  padding-top: 1em
  text-align: center;
  text-align: left;
  display: block;
}

.step3 {
  /*margin: 2rem auto;*/
  opacity: 0.2;
  display: block;
  height: 100% !important;
}

.step3.is-active {
  opacity: 1;
}

#third-map-scroll {
  /*display: flex;*/
  border-top: 1px;
  border-bottom: 1px;
  /*height: 100%;*/
}

.scroll__text3
  width: 60%
  left: 40%
  padding-left: 10%
  padding-right: 10%
  padding-top: 10%
  /*top: -30em*/
  position: relative
  text-align: center;
  z-index: 999

.scroll__figure3 {
  font-family: 'Playfair Display', serif;
  font-weight: 400;
  position: -webkit-sticky;
  position: sticky;
  width: 40%
  padding-left: 15%;
  padding-top: 15%
  /*right: 50%;*/
  top: 4em;
  bottom: auto;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  z-index: 100;
}

.scroll__figure2.is-fixed {
  position: fixed;
}

.scroll__figure2.is-bottom {
  bottom: 0;
  top: auto;
}

.chart {
  position: absolute;
  right: 1.5rem;
  top: 30%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.chart p {
  text-align: center;
  padding: 1rem;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  font-size: 8rem;
  font-weight: 900;
  color: #666;
}

.scroll__figure2 svg {
  padding-left: 10% !important
  top:4em;
  height: 40em !important
}

.tick line{
  opacity: 0.2;
  stroke-dasharray: 5,5;
}

.tooltip {
  background: rgb(0,0,0);
  color: #f9f9f9;
  padding: 8px;
  position: absolute !important;
}

.tooltip h3 {
  margin: 0px 0px 8px;
}